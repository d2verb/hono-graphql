    "graphql": "^16.9.0",
    "graphql-yoga": "^5.7.0",
    "hono": "^4.6.3",
    "neverthrow": "^8.0.0",
    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@faker-js/faker": "^9.0.3",
    "@types/bun": "latest",
    "prisma": "^5.20.0"
  }
}